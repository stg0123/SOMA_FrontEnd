<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kospeech.speechteacher">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".AnalysisActivity"
            android:exported="true"
            android:theme="@style/Theme.SpeechTeacher"
            />
        <activity
            android:name=".AnalysisLoadingActivity"
            android:exported="true"
            android:theme="@style/Theme.SpeechTeacher" />
        <activity
            android:name=".PresentationResultListActivity"
            android:exported="true"
            android:theme="@style/Theme.SpeechTeacher" />
        <activity
            android:name=".PresentationPracticeActivity"
            android:exported="true"
            android:theme="@style/Theme.SpeechTeacher" />
        <activity
            android:name=".MyinfoUpdateActivity"
            android:exported="true"
            android:theme="@style/Theme.SpeechTeacher" />
        <activity
            android:name=".FragmentMypage"
            android:exported="true"
            android:theme="@style/Theme.SpeechTeacher"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".JoinActivity"
            android:exported="true"
            android:theme="@style/Theme.SpeechTeacher" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.SpeechTeacher" />
        <activity
            android:name=".FragmentPresentation"
            android:exported="true"
            android:theme="@style/Theme.SpeechTeacher"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SpeechTeacher" />
    </application>

</manifest>