<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpeechTeacher" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- background color-->
        <item name="android:windowBackground">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorError">@color/error</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textprimary</item>
        <item name="android:textColorPrimaryInverse">@color/textprimaryinverse</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- font style custom. -->
        <item name="android:textViewStyle">@style/NotoSansTextViewStyle</item>
        <item name="android:buttonStyle">@style/NotoSansButtonStyle</item>
        <item name="android:editTextStyle">@style/NotoSansEditTextStyle</item>
        <item name="android:radioButtonStyle">@style/NotoSansRadioButtonStyle</item>
        <item name="android:checkboxStyle">@style/NotoSansCheckboxStyle</item>
    </style>
    <style name="Theme.SplashTheme" parent="Theme.SpeechTeacher">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Theme.SpeechTeacher.Main" parent="Theme.SpeechTeacher">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>
    <style name="MySpinnerDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- 상단 색 변경 -->
        <item name="colorAccent">@color/primary</item>
        <!-- 선택한 날짜를 표시할 색상 -->
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">@color/primary</item>
    </style>


</resources>