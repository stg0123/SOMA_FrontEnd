<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PresentationMakeTimeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/presentation_make_time_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="타이머 설정"
            android:textSize="24dp"
            android:textColor="@color/textprimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageButton
            android:id="@+id/presentation_make_time_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_chevron_left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/presentation_make_time_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="완료"
            android:textColor="@color/accent"
            android:textSize="16dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/presentation_make_time_background"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="20dp"
        android:background="@drawable/oval_time_background"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/presentation_make_time_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <ImageView
            android:id="@+id/presentation_make_time_logoimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_foreground"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <LinearLayout
            android:id="@+id/presentation_make_time_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/presentation_make_time_logoimg"
            >
            <TextView
                android:id="@+id/presentation_make_time_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border_primary"
                android:padding="5dp"
                android:text="00"
                android:textSize="50dp"
                android:textStyle="bold"
                android:fontFamily="@font/font_custom_digital"
                android:textColor="@color/textprimary"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분"
                android:textSize="30dp"
                android:textColor="@color/textprimary"
                android:layout_gravity="bottom"
                />
            <TextView
                android:id="@+id/presentation_make_time_sec"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border_primary"
                android:padding="5dp"
                android:text="00"
                android:textSize="50dp"
                android:textColor="@color/textprimary"
                android:textStyle="bold"
                android:fontFamily="@font/font_custom_digital"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="초"
                android:textSize="30dp"
                android:textColor="@color/textprimary"
                android:layout_gravity="bottom"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/presentation_make_time_time"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="시간을 설정해주세요."
            android:textSize="12dp"
            android:textColor="@color/textprimaryinverse"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/presentation_make_time_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/presentation_make_time_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="발표시간 설정"
            android:textSize="20dp"
            android:textColor="@color/textprimary"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  지정된 시간이 되면 알림음을 통해 알려드립니다."
            android:textSize="12dp"
            android:textColor="@color/textprimaryinverse"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_alert"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/presentation_make_time_plus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/presentation_make_time_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/presentation_make_time_plus_5min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border"
            android:text="+5분"
            android:textSize="20dp"
            android:textColor="@color/textprimaryinverse"/>
        <Button
            android:id="@+id/presentation_make_time_plus_1min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@drawable/round_border"
            android:text="+1분"
            android:textSize="20dp"
            android:textColor="@color/textprimaryinverse"/>
        <Button
            android:id="@+id/presentation_make_time_plus_30sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@drawable/round_border"
            android:text="+30초"
            android:textSize="20dp"
            android:textColor="@color/textprimaryinverse"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/presentation_make_time_plus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/presentation_make_time_minus_5min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border"
            android:text="-5분"
            android:textSize="20dp"
            android:textColor="@color/textprimaryinverse"/>
        <Button
            android:id="@+id/presentation_make_time_minus_1min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@drawable/round_border"
            android:text="-1분"
            android:textSize="20dp"
            android:textColor="@color/textprimaryinverse"/>
        <Button
            android:id="@+id/presentation_make_time_minus_30sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@drawable/round_border"
            android:text="-30초"
            android:textSize="20dp"
            android:textColor="@color/textprimaryinverse"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>