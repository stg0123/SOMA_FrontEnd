<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".JoinActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_logo"
        android:layout_gravity="left"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="아이디(이메일)"
            android:textSize="16dp"
            android:textColor="@color/textprimary"
            />
        <EditText
            android:id="@+id/join_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:hint="이메일 형식으로 입력해주세요"
            android:textSize="20dp"
            android:maxLength="30"
            android:singleLine="true"
            android:textColorHint="@color/textprimaryinverse"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="비밀번호"
            android:textSize="16dp"
            android:textColor="@color/textprimary"
            />
        <EditText
            android:id="@+id/join_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:hint="비밀번호를 입력해주세요(6자 이상)"
            android:textSize="20dp"
            android:maxLength="30"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColorHint="@color/textprimaryinverse"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="비밀번호 확인"
            android:textSize="16dp"
            android:textColor="@color/textprimary"
            />
        <EditText
            android:id="@+id/join_pw2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:hint="비밀번호를 입력해주세요(6자 이상)"
            android:textSize="20dp"
            android:maxLength="30"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColorHint="@color/textprimaryinverse"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="닉네임"
            android:textSize="16dp"
            android:textColor="@color/textprimary"
            />
        <EditText
            android:id="@+id/join_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:hint="닉네임을 입력하세요"
            android:textSize="20dp"
            android:maxLength="30"
            android:singleLine="true"
            android:textColorHint="@color/textprimaryinverse"
            />
    </LinearLayout>


    <Button
        android:id="@+id/join_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="회원가입"
        android:background="@drawable/make_presentation_button"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정이 이미 있으신가요?  "
            />
        <TextView
            android:id="@+id/join_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textColor="@color/accent"
            />

    </LinearLayout>


</LinearLayout>